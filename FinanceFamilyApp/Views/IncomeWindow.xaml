<Window x:Class="FinanceFamilyApp.Views.IncomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление дохода"
        Height="500"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f5f5f5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                   Text="Добавление дохода"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="#333333"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Форма -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                Padding="20">
            <StackPanel>
                <!-- Категория -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Категория"
                               Foreground="#666666"
                               Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding IncomeCategories}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding SelectedCategory}"
                              FontSize="14"
                              Padding="10"/>
                </StackPanel>

                <!-- Член семьи -->
                <StackPanel Margin="0,0,0,15"/>

                <!-- Сумма -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Сумма"
                               Foreground="#666666"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Amount, StringFormat=N2}"
                             FontSize="14"
                             Padding="10"/>
                </StackPanel>

                <!-- Дата -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Дата"
                               Foreground="#666666"
                               Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding Date}"
                                FontSize="14"
                                Padding="10"/>
                </StackPanel>

                <!-- Описание -->
                <StackPanel/>
            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="Сохранить"
                    Command="{Binding SaveCommand}"
                    Background="#4CAF50"
                    Foreground="White"
                    Padding="20,10"
                    FontWeight="SemiBold"
                    Width="120"/>

            <Button Content="Отмена"
                    Command="{Binding CancelCommand}"
                    Background="#f44336"
                    Foreground="White"
                    Padding="20,10"
                    FontWeight="SemiBold"
                    Width="120"
                    Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>