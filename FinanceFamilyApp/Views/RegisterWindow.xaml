<Window x:Class="FinanceFamilyApp.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация"
        Height="550"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Регистрация"
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,30"
                   Foreground="#2c3e50"/>

        <!-- Имя пользователя -->
        <TextBlock Grid.Row="1" 
                   Text="Имя пользователя:" 
                   Margin="0,0,0,5" 
                   Foreground="#2c3e50"/>
        <TextBox Grid.Row="2" 
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                 Height="35" 
                 Margin="0,0,0,15"/>

        <!-- Email -->
        <TextBlock Grid.Row="3" 
                   Text="Email:" 
                   Margin="0,0,0,5" 
                   Foreground="#2c3e50"/>
        <TextBox Grid.Row="4" 
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                 Height="35" 
                 Margin="0,0,0,15"/>

        <!-- Пароль -->
        <TextBlock Grid.Row="5" 
                   Text="Пароль:" 
                   Margin="0,0,0,5" 
                   Foreground="#2c3e50"/>
        <PasswordBox x:Name="PasswordBox" 
                     Grid.Row="6"
                     Height="35" 
                     Margin="0,0,0,15"/>

        <!-- Подтверждение пароля -->
        <TextBlock Grid.Row="7" 
                   Text="Подтверждение пароля:" 
                   Margin="0,0,0,5" 
                   Foreground="#2c3e50"/>
        <PasswordBox x:Name="ConfirmPasswordBox" 
                     Grid.Row="8"
                     Height="35" 
                     Margin="0,0,0,15"/>

        <!-- Сообщение об ошибке -->
        <TextBlock Grid.Row="9" 
                   Text="{Binding ErrorMessage}"
                   Foreground="Red" 
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Margin="0,10"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="10" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button Content="Зарегистрироваться" 
                    Command="{Binding RegisterCommand}"
                    Width="150" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Background="#27ae60" 
                    Foreground="White"
                    FontWeight="SemiBold"/>

            <Button Content="Отмена" 
                    Command="{Binding CancelCommand}"
                    Width="100" 
                    Height="35"
                    Background="#e74c3c" 
                    Foreground="White"
                    FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>