<Window x:Class="FinanceFamilyApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему"
        Height="400"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Вход в систему"
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,30"
                   Foreground="#2c3e50"/>

        <!-- Имя пользователя -->
        <TextBlock Grid.Row="1" 
                   Text="Имя пользователя:" 
                   Margin="0,0,0,5" 
                   Foreground="#2c3e50"/>
        <TextBox Grid.Row="2" 
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                 Height="35" 
                 Margin="0,0,0,20"/>

        <!-- Пароль -->
        <TextBlock Grid.Row="3" 
                   Text="Пароль:" 
                   Margin="0,0,0,5" 
                   Foreground="#2c3e50"/>
        <PasswordBox x:Name="PasswordBox" 
                     Grid.Row="4"
                     Height="35" 
                     Margin="0,0,0,20"/>

        <!-- Сообщение об ошибке -->
        <TextBlock Grid.Row="5" 
                   Text="{Binding ErrorMessage}"
                   Foreground="Red" 
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Margin="0,10"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button Content="Войти" 
                    Command="{Binding LoginCommand}"
                    Width="120" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Background="#27ae60" 
                    Foreground="White"
                    FontWeight="SemiBold"/>

            <Button Content="Регистрация" 
                    Command="{Binding RegisterCommand}"
                    Width="120" 
                    Height="35"
                    Background="#3498db" 
                    Foreground="White"
                    FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>