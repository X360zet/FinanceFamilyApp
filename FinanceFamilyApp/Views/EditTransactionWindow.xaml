<Window x:Class="FinanceFamilyApp.Views.EditTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:FinanceFamilyApp.Converters"
        Title="{Binding Title}"
        Height="550"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f5f5f5">

    <Window.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                   Text="{Binding Title}"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="#333333"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Форма -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                Padding="20">
            <StackPanel>
                <!-- Категория -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Категория"
                               Foreground="#666666"
                               Margin="0,0,0,5"/>

                    <!-- Для доходов -->
                    <ComboBox ItemsSource="{Binding IncomeCategories}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding SelectedIncomeCategory}"
                              FontSize="14"
                              Padding="10"
                              Visibility="{Binding TransactionType, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Доход}"/>

                    <!-- Для расходов -->
                    <ComboBox ItemsSource="{Binding ExpenseCategories}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding SelectedExpenseCategory}"
                              FontSize="14"
                              Padding="10"
                              Visibility="{Binding TransactionType, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Расход}"/>
                </StackPanel>

                <!-- Член семьи -->
                <StackPanel Margin="0,0,0,15"/>

                <!-- Сумма -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Сумма"
                               Foreground="#666666"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Amount, StringFormat=N2}"
                             FontSize="14"
                             Padding="10"/>
                </StackPanel>

                <!-- Источник (только для доходов) -->
                <StackPanel Margin="0,0,0,15"
                            Visibility="{Binding TransactionType, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Доход}"/>

                <!-- Дата -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Дата"
                               Foreground="#666666"
                               Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding Date}"
                                FontSize="14"
                                Padding="10"/>
                </StackPanel>

                <!-- Описание -->
                <StackPanel/>

                <!-- Сообщение об ошибке -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#f44336"
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="Сохранить"
                    Command="{Binding SaveCommand}"
                    Background="#4CAF50"
                    Foreground="White"
                    Padding="20,10"
                    FontWeight="SemiBold"
                    Width="100"/>

            <Button Content="Удалить"
                    Command="{Binding DeleteCommand}"
                    Background="#f44336"
                    Foreground="White"
                    Padding="20,10"
                    FontWeight="SemiBold"
                    Width="100"
                    Margin="10,0,10,0"/>

            <Button Content="Отмена"
                    Command="{Binding CancelCommand}"
                    Background="#9E9E9E"
                    Foreground="White"
                    Padding="20,10"
                    FontWeight="SemiBold"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>