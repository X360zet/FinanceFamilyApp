<Window x:Class="FinanceFamilyApp.Views.BudgetManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:FinanceFamilyApp.Converters"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Управление бюджетами"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#f5f5f5">

    <Window.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Стиль для правого выравнивания текста в DataGrid -->
        <Style x:Key="RightAlignedTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <!-- Основной стиль кнопок -->
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="10,5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#3d8b40"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль красных кнопок -->
        <Style x:Key="RedButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#f44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e53935"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#d32f2f"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для карточек -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2"
                                      Opacity="0.1"
                                      BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для заголовков -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Стиль для строк DataGrid -->
        <Style x:Key="BudgetRowStyle" TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsExceeded}" Value="True">
                    <Setter Property="Background" Value="#FFEBEE"/>
                    <Setter Property="Foreground" Value="#D32F2F"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding UsagePercentage}" Value="100">
                    <Setter Property="Background" Value="#FFF3E0"/>
                    <Setter Property="Foreground" Value="#F57C00"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок окна -->
        <TextBlock Grid.Row="0"
                   Text="Управление бюджетами"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333333"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Основное содержимое -->
        <TabControl Grid.Row="1">
            <TabItem Header="Бюджеты">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,10">
                        <!-- Кнопки управления (только для администратора) -->
                        <Border Style="{StaticResource CardStyle}"
                                Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Действия с бюджетами"
                                           Style="{StaticResource HeaderTextStyle}"/>
                                <Grid HorizontalAlignment="Right">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="1"
                                            Content=" Удалить"
                                            Command="{Binding DeleteBudgetCommand}"
                                            Style="{StaticResource RedButtonStyle}"
                                            ToolTip="Удалить выбранный бюджет"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Информационное сообщение для обычных пользователей -->
                        <Border Style="{StaticResource CardStyle}"
                                Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=False}">
                            <StackPanel>
                                <TextBlock Text="Просмотр бюджетов"
                                           Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Text="Только администратор может редактировать и удалять бюджеты. Вы можете только просматривать установленные бюджеты и оповещения."
                                           TextWrapping="Wrap"
                                           Foreground="#666666"
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Список бюджетов -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Установленные бюджеты"
                                           Style="{StaticResource HeaderTextStyle}"/>
                                <DataGrid ItemsSource="{Binding Budgets}"
                                          SelectedItem="{Binding SelectedBudget}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          IsReadOnly="True"
                                          MaxHeight="400"
                                          RowStyle="{StaticResource BudgetRowStyle}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Категория"
                                                            Binding="{Binding CategoryName}"
                                                            Width="150"/>
                                        <DataGridTextColumn Header="Бюджет"
                                                            Binding="{Binding Amount, StringFormat=C}"
                                                            Width="130"
                                                            ElementStyle="{StaticResource RightAlignedTextStyle}"/>
                                        <DataGridTextColumn Header="Потрачено"
                                                            Binding="{Binding CurrentSpent, StringFormat=C}"
                                                            Width="130"
                                                            ElementStyle="{StaticResource RightAlignedTextStyle}"/>
                                        <DataGridTextColumn Header="Остаток"
                                                            Binding="{Binding RemainingAmount, StringFormat=C}"
                                                            Width="130"
                                                            ElementStyle="{StaticResource RightAlignedTextStyle}"/>
                                        <DataGridTextColumn Header="Использовано"
                                                            Binding="{Binding UsagePercentage, StringFormat={}{0:F1}%}"
                                                            Width="110"
                                                            ElementStyle="{StaticResource RightAlignedTextStyle}"/>
                                        <DataGridTextColumn Header="Период"
                                                            Binding="{Binding PeriodType}"
                                                            Width="100"/>
                                        <DataGridTextColumn Header="Начало"
                                                            Binding="{Binding StartDate, StringFormat='dd.MM.yyyy'}"
                                                            Width="110"/>
                                        <DataGridTextColumn Header="Окончание"
                                                            Binding="{Binding EndDate, StringFormat='dd.MM.yyyy'}"
                                                            Width="110"/>
                                        <DataGridTextColumn Header="Статус"
                                                            Width="100">
                                            <DataGridTextColumn.CellStyle>
                                                <Style TargetType="DataGridCell">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                </Style>
                                            </DataGridTextColumn.CellStyle>
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="Text">
                                                        <Setter.Value>
                                                            <MultiBinding StringFormat="{}{0}">
                                                                <Binding Path="IsExceeded"/>
                                                            </MultiBinding>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsExceeded}" Value="True">
                                                            <Setter Property="Text" Value="Превышен"/>
                                                            <Setter Property="Foreground" Value="#D32F2F"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsExceeded}" Value="False">
                                                            <Setter Property="Text" Value="В норме"/>
                                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Оповещения">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,10">
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Оповещения о бюджете"
                                           Style="{StaticResource HeaderTextStyle}"/>
                                <ListView ItemsSource="{Binding BudgetAlerts}"
                                          MaxHeight="400">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="8"
                                                    Padding="15"
                                                    Margin="0,0,0,10"
                                                    Background="{Binding IsCritical, Converter={StaticResource BooleanToBrushConverter}}">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Message}"
                                                               TextWrapping="Wrap"
                                                               FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding AlertDate, StringFormat='dd.MM.yyyy HH:mm'}"
                                                               Foreground="#666666"
                                                               FontSize="12"
                                                               Margin="0,5,0,0"/>
                                                    <ProgressBar Value="{Binding Percentage}"
                                                                 Maximum="100"
                                                                 Height="10"
                                                                 Margin="0,10,0,0">
                                                        <ProgressBar.Style>
                                                            <Style TargetType="ProgressBar">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsCritical}" Value="True">
                                                                        <Setter Property="Foreground" Value="#f44336"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Percentage}" Value="100">
                                                                        <Setter Property="Foreground" Value="#FF9800"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Percentage}" Value="80">
                                                                        <Setter Property="Foreground" Value="#FFC107"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ProgressBar.Style>
                                                    </ProgressBar>
                                                    <TextBlock Text="{Binding Percentage, StringFormat='Использовано: {0:F1}%'}"
                                                               HorizontalAlignment="Right"
                                                               FontSize="11"
                                                               Foreground="#999999"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Нижняя панель с сообщением об ошибке и кнопкой -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Сообщение об ошибке -->
            <TextBlock Grid.Column="0"
                       Text="{Binding ErrorMessage}"
                       Foreground="#f44336"
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- Кнопка закрытия -->
            <Button Grid.Column="1"
                    Content="Закрыть"
                    Width="130"
                    Height="38"
                    Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</Window>